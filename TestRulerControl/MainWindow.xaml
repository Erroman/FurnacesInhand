<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:RulerControl="clr-namespace:RulerControls;assembly=RulerControls" xmlns:RulerControl1="clr-namespace:RulerControl;assembly=RulerControls" x:Class="TestRulerControl.MainWindow"        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="245*"/>
            <RowDefinition Height="52"/>
            <RowDefinition Height="74*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="170*"/>
            <ColumnDefinition Width="55*"/>

        </Grid.ColumnDefinitions>
        <RulerControl1:HorizontalRuler Grid.Column="1" HorizontalAlignment="Stretch" Height="32"  Grid.Row="2" VerticalAlignment="Top" />
    </Grid>
</Window>
