<Window x:Class="DigitalInput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalInput"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox HorizontalAlignment="Center" Height="33" FontSize = "20" TextWrapping="Wrap" Text="{Binding DigitalNumber}" VerticalAlignment="Top"  Width="154"/>
        <TextBox Height="33" TextWrapping="Wrap" FontSize = "20" Text="{Binding DigitalNumber}" HorizontalAlignment="Center"  Width="154"/>
    </StackPanel>
</Window>
