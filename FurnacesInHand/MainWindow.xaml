<Window x:Name="mainWindow" x:Class="FurnacesInHand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FurnacesInHand"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900" Loaded="MainWindow_Loaded" Closing="MainWindow_Closing">
    <Window.Resources>
        <local:vdp03 x:Key="fTemplate"/>
    </Window.Resources>
    <Grid Margin="0,0,0,0" HorizontalAlignment="Left" Width="890" DataContext="fTemplate">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="123*"/>
            <ColumnDefinition Width="767*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="parameterValues" HorizontalAlignment="Left" Height="286" Margin="92,49,0,0" VerticalAlignment="Top" Width="212" Grid.Column="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding tagname}"/>
                        <TextBlock Text=" = "/>
                        <TextBlock Text="{Binding val}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Печь №3" Margin="0,159,692,226" RenderTransformOrigin="4.239,2.37" HorizontalAlignment="Right" Width="65" Grid.Column="1" />
        <Label Content="Напряжение" Margin="4,193,680,192" RenderTransformOrigin="4.239,2.37" Grid.Column="1" />
        <RadioButton Name ="firstDataBase" Content="Удалённая база" HorizontalAlignment="Left" Margin="339,49,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Grid.Column="1" Height="15" Width="105"/>
        <RadioButton Name="secondDataBase" Content="Локальная база" HorizontalAlignment="Left" Margin="339,69,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Grid.Column="1" Height="15" Width="105"/>
        <TextBox Name ="txtb" HorizontalAlignment="Left" Height="44" Margin="347,291,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button HorizontalAlignment="Left" Margin="457,49,0,0" VerticalAlignment="Top" Width="175" Height="35" RenderTransformOrigin="0.788,0.351" Click="Button_Click" Grid.Column="1">
            <Button.Content>
                <TextBlock Width="175" TextWrapping="Wrap">
                    <Run Text="Копируем"/>
                    <LineBreak/>
                    удалённую базу в локальную
                </TextBlock>
            </Button.Content>
        </Button>
        <TreeView HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="100">
            <TreeViewItem Header ="Что на печах:">
                <TreeViewItem Header="Печь №1"/>
                <TreeViewItem Header="Печь №2"/>
                <TreeViewItem Header="Печь №3"  IsSelected="True"/>
                <TreeViewItem Header="Печь №4"/>
                <TreeViewItem Header="Печь №5"/>
                <TreeViewItem Header="Печь №6"/>
                <TreeViewItem Header="Печь №7"/>
                <TreeViewItem Header="Печь №8"/>
                <TreeViewItem Header="Печь №9"/>
                <TreeViewItem Header="Печь №10"/>
                <TreeViewItem Header="Печь №15"/>
                <TreeViewItem Header="Печь №16"/>
                <TreeViewItem Header="Печь №17"/>
                <TreeViewItem Header="Печь №18"/>
                <TreeViewItem Header="Печь №19"/>
                <TreeViewItem Header="Печь №20"/>
                <TreeViewItem Header="Печь №29"/>
                <TreeViewItem Header="Печь №30"/>
                <TreeViewItem Header="Печь №31"/>
                <TreeViewItem Header="Печь №32"/>
                <TreeViewItem Header="Печь №33"/>
                <TreeViewItem Header="Печь №44"/>
            </TreeViewItem>    
        </TreeView>


    </Grid>
</Window>
