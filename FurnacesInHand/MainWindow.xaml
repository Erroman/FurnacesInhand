<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:FurnacesInHand"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Name="mainWindow" x:Class="FurnacesInHand.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="1021" Width="1900" Closing="MainWindow_Closing" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Resources>
        <DataTemplate x:Key="ParametersList" DataType="{x:Type ListBox}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding dateandtime, StringFormat= MM.dd.yy HH:mm:ss}"/>
                <TextBlock Text="     "/>
                <TextBlock Text="{Binding val}"/>
            </StackPanel>
        </DataTemplate>
        <local:FurnacesInHandViewModel x:Key="VoltageViewModel" />
        <local:VoltageConverter x:Key="VoltageConverter"/>
        <local:CurrentConverter x:Key="CurrentConverter"/>
        <local:VacuumConverter x:Key="VacuumConverter"/>
        <local:SolenoidUConverter x:Key="SolenoidUConverter"/>
        <local:SolenoidIConverter x:Key="SolenoidIConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <local:FurnacesInHandViewModel/>
    </Window.DataContext>
    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="1100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TreeView Grid.RowSpan="5" x:Name="ListOfFurnaces" Height="399" Margin="10,10,10,0" VerticalAlignment="Top" SelectedItemChanged="TreeView_SelectedItemChanged">
            <TreeViewItem Header ="Что на печах:" IsExpanded="True"  Margin="0,0,25,0">
                <TreeViewItem Header="Печь №1" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №2" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №3" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №4" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №5" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №6" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №7" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №8" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №9" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №10" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №15" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №16" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №17" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №18" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №19" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №20" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №29" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №30" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №31" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №32" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №33" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №44" Margin="0,0,25,0"/>
            </TreeViewItem>
        </TreeView>
        <Label Grid.RowSpan="5" Content="Начало плавки" HorizontalAlignment="Left" Height="24" Margin="40,414,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Grid.RowSpan="5" Content="Конец плавки" HorizontalAlignment="Left" Height="24" Margin="40,465,0,0" VerticalAlignment="Top" Width="120"/>
        <DatePicker Grid.RowSpan="5" x:Name="begTime"  HorizontalAlignment="Left" Margin="0,441,0,0" VerticalAlignment="Top" Width="99" Height="24"/>
        <DatePicker Grid.RowSpan="5" x:Name="endTime" HorizontalAlignment="Left" Margin="0,491,0,0" VerticalAlignment="Top" Width="99" Height="24"/>
        <xctk:TimePicker Grid.RowSpan="5" x:Name="begTimeMin" HorizontalAlignment="Left" Margin="95,441,0,0" VerticalAlignment="Top" Height="24" Width="88"/>
        <xctk:TimePicker Grid.RowSpan="5" x:Name="endTimeMin" HorizontalAlignment="Left" Margin="95,491,0,0" VerticalAlignment="Top" Width="88" Height="24"/>
        <RadioButton Grid.RowSpan="5" x:Name ="firstDataBase" Content="Удалённая база" HorizontalAlignment="Left" Margin="48,845,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Height="15" Width="105"/>
        <RadioButton Grid.RowSpan="5" x:Name="secondDataBase" Content="Локальная база" HorizontalAlignment="Left" Margin="48,865,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Height="15" Width="105"/>
        <TextBox Grid.RowSpan="5" x:Name ="txtb" HorizontalAlignment="Left" Height="44" Margin="31,906,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Grid.RowSpan="5" HorizontalAlignment="Left" Margin="0,539,0,0" VerticalAlignment="Top" Width="183" Height="35" RenderTransformOrigin="0.788,0.351" Click="Button_Click" Content="Вывод значений"/>

        <ListBox Grid.Row="0" x:Name="voltageValues" HorizontalAlignment="Left" Margin="0,10,0,66" Width="212" Grid.Column="1" ItemTemplate="{StaticResource ParametersList}"/>

        <ListBox Grid.Row="1" x:Name="currentValues" HorizontalAlignment="Left" Margin="0,10,0,68" Width="212" Grid.Column="1" ItemTemplate="{StaticResource ParametersList}"/>

        <ListBox Grid.Row="2" x:Name="pressureValues" HorizontalAlignment="Left" Height="128" Margin="0,10,0,0" VerticalAlignment="Top" Width="212" Grid.Column="1" ItemTemplate="{StaticResource ParametersList}"/>


        <ListBox Grid.Row="3" x:Name="solVoltageValues" HorizontalAlignment="Left" Height="126" Margin="0,10,0,0" VerticalAlignment="Top" Width="212" Grid.Column="1" ItemTemplate="{StaticResource ParametersList}"/>

        <ListBox Grid.Row="4" x:Name="solCurrentValues" HorizontalAlignment="Left" Height="132" Margin="0,10,0,0" VerticalAlignment="Top" Width="212" Grid.Column="1" ItemTemplate="{StaticResource ParametersList}"/>

        <local:GraphCanvas x:Name="VoltagePlot" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="AliceBlue" MouseLeftButtonDown="VoltagePlot_MouseLeftButtonDown" MouseMove="VoltagePlot_MouseMove">
            <i:Interaction.Behaviors>
                <local:MouseBehaviour MouseX="{Binding CanvasX, Mode=OneWayToSource}" MouseY="{Binding CanvasY, Mode=OneWayToSource}" />
            </i:Interaction.Behaviors>
            <i:Interaction.Triggers>
                <!-- sample to react to the mouse button action https://stackoverflow.com/questions/24260946/handling-mouse-events-in-mvvm-in-wpf -->
                <i:EventTrigger EventName="MouseUp">
                    <i:InvokeCommandAction Command="{Binding MyCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </local:GraphCanvas>
        <local:GraphCanvas x:Name="CurrentPlot"  Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="AntiqueWhite" MouseLeftButtonDown="CurrentPlot_MouseLeftButtonDown" MouseMove="CurrentPlot_MouseMove">
            <i:Interaction.Behaviors>
                <local:MouseBehaviour MouseX="{Binding CanvasX, Mode=OneWayToSource}" MouseY="{Binding CanvasY, Mode=OneWayToSource}" />
            </i:Interaction.Behaviors>
        </local:GraphCanvas>
        <local:GraphCanvas x:Name ="VacuumPlot" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Aqua" MouseMove="VacuumPlot_MouseMove" MouseLeftButtonDown="VacuumPlot_MouseLeftButtonDown">
            <i:Interaction.Behaviors>
                <local:MouseBehaviour MouseX="{Binding CanvasX, Mode=OneWayToSource}" MouseY="{Binding CanvasY, Mode=OneWayToSource}" />
            </i:Interaction.Behaviors>
        </local:GraphCanvas>
        <local:GraphCanvas x:Name ="SolenoidUPlot" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Azure" MouseLeftButtonDown="SolenoidUPlot_MouseLeftButtonDown" MouseMove="SolenoidUPlot_MouseMove">
            <i:Interaction.Behaviors>
                <local:MouseBehaviour MouseX="{Binding CanvasX, Mode=OneWayToSource}" MouseY="{Binding CanvasY, Mode=OneWayToSource}" />
            </i:Interaction.Behaviors>
        </local:GraphCanvas>
        <local:GraphCanvas x:Name ="SolenoidIPlot" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Blue" MouseLeftButtonDown="SolenoidIPlot_MouseLeftButtonDown" MouseMove="SolenoidIPlot_MouseMove">
            <i:Interaction.Behaviors>
                <local:MouseBehaviour MouseX="{Binding CanvasX, Mode=OneWayToSource}" MouseY="{Binding CanvasY, Mode=OneWayToSource}" />
            </i:Interaction.Behaviors>
        </local:GraphCanvas>
        <TextBox Text="{Binding CanvasX,Converter={StaticResource VoltageConverter}}" Grid.Column="1" HorizontalAlignment="Left" Height="36" Margin="38,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108"/>
        <TextBox Text="{Binding CanvasX,Converter={StaticResource CurrentConverter}}" Grid.Column="1" HorizontalAlignment="Left" Height="36" Margin="38,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" Grid.Row="1"/>
        <TextBox Text="{Binding CanvasX,Converter={StaticResource VacuumConverter}}" Grid.Column="1" HorizontalAlignment="Left" Height="36" Margin="38,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" Grid.Row="2"/>
        <TextBox Text="{Binding CanvasX,Converter={StaticResource SolenoidUConverter}}" Grid.Column="1" HorizontalAlignment="Left" Height="36" Margin="38,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" Grid.Row="3"/>
        <TextBox Text="{Binding CanvasX,Converter={StaticResource SolenoidIConverter}}" Grid.Column="1" HorizontalAlignment="Left" Height="36" Margin="38,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" Grid.Row="4"/>
    </Grid>

</Window>
