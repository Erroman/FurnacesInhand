<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FurnacesInHand"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" xmlns:Custom="http://schemas.microsoft.com/wpf/2008/toolkit" xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit" x:Name="mainWindow" x:Class="FurnacesInHand.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1900" Loaded="MainWindow_Loaded" Closing="MainWindow_Closing" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Margin="0,0,0,0" HorizontalAlignment="Left">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="141*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="parameterValues" HorizontalAlignment="Left" Height="286" Margin="336,54,0,0" VerticalAlignment="Top" Width="212" Grid.Column="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding tagname}"/>
                        <TextBlock Text=" = "/>
                        <TextBlock Text="{Binding val}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label x:Name="numberOfFurnaceLabel" Content="Печь №3" Margin="0,163,631,222" RenderTransformOrigin="4.239,2.37" HorizontalAlignment="Right" Width="65" Grid.Column="1" />
        <Label Content="Напряжение" Margin="9,197,598,188" RenderTransformOrigin="4.239,2.37" Grid.Column="1" />
        <RadioButton x:Name ="firstDataBase" Content="Удалённая база" HorizontalAlignment="Left" Margin="583,54,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Grid.Column="1" Height="15" Width="105"/>
        <RadioButton x:Name="secondDataBase" Content="Локальная база" HorizontalAlignment="Left" Margin="583,74,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" Grid.Column="1" Height="15" Width="105"/>
        <TextBox x:Name ="txtb" HorizontalAlignment="Left" Height="44" Margin="591,296,-15,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button HorizontalAlignment="Left" Margin="701,54,-180,0" VerticalAlignment="Top" Width="175" Height="35" RenderTransformOrigin="0.788,0.351" Click="Button_Click" Grid.Column="1"/>
        <TreeView x:Name="ListOfFurnaces" Height="399" Margin="10,10,25,0" VerticalAlignment="Top" SelectedItemChanged="TreeView_SelectedItemChanged">
            <TreeViewItem Header ="Что на печах:" IsExpanded="True"  Margin="0,0,25,0">
                <TreeViewItem Header="Печь №1" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №2" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №3" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №4" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №5" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №6" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №7" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №8" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №9" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №10" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №15" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №16" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №17" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №18" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №19" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №20" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №29" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №30" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №31" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №32" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №33" Margin="0,0,25,0"/>
                <TreeViewItem Header="Печь №44" Margin="0,0,25,0"/>
            </TreeViewItem>
        </TreeView>
        <Label Content="Начало плавки" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="10,11,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Конец плавки" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="9,47,0,0" VerticalAlignment="Top" Width="120"/>
        <ContentControl Content="ContentControl" Grid.Column="1" HorizontalAlignment="Left" Margin="484,-66,0,0" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" RenderTransformOrigin="0.137,2.097" Grid.Column="1" Margin="568,118,-47,820"><Run Text="Копируем"/><LineBreak/><Run Text="удалённую базу в локальную"/></TextBlock>
        <DatePicker x:Name="begTime" Grid.Column="1" HorizontalAlignment="Left" Margin="116,11,0,0" VerticalAlignment="Top" Width="99"/>
        <DatePicker x:Name="endTime" Grid.Column="1" HorizontalAlignment="Left" Margin="116,47,0,0" VerticalAlignment="Top" Width="99"/>
        <xctk:TimePicker x:Name="begTimeMin"  Grid.Column="1" HorizontalAlignment="Left" Margin="228,11,0,0" VerticalAlignment="Top" Height="24" Width="88"/>
        <xctk:TimePicker x:Name="endTimeMin" Grid.Column="1" HorizontalAlignment="Left" Margin="228,47,0,0" VerticalAlignment="Top" Width="88" Height="24"/>



    </Grid>
</Window>
